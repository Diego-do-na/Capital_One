// tsconfig.json

{
  "compilerOptions": {
    // Especifica el m√≥dulo de salida (Node.js moderno usa ESNext o NodeNext)
    "module": "NodeNext",
    // Especifica la sintaxis de destino (para usar async/await, etc.)
    "target": "ES2022",
    // Asegura que TypeScript entienda los imports de Node.js
    "moduleResolution": "NodeNext",
    // Habilita la sintaxis import/export en TypeScript (requerido por TS4148)
    "verbatimModuleSyntax": true,
    // ... otras opciones importantes ...
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"]
}